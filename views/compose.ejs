<%- include("partials/header"); %>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="mb-3">
        <label for="composeTitle" class="form-label">Title</label>
        <input type="text" name="postTitle" id="composeTitle" placeholder="Type here.." class="form-control">
    </div>
    <div class="mb-3">
        <label for="composeBody" class="form-label">Post</label>
        <textarea name="postBody" id="composeBody" cols="90" rows="10" class="form-control" placeholder="Write here.."></textarea>
    </div>
    <button type="submit" class="btn btn-primary btn-sm">Publish</button>
</form>
<%- include("partials/footer"); %> 